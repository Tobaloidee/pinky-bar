declare -a _bases=(
  'archlinux'
  'debian'
  'gentoo'
  'slackware'
  'rhel'
  'frugalware'
  'angstrom'
)

_printf_err() {
  printf '%s\n' "try again with: bash ${0} basedistro"
  printf '%s ' "Bases: ${_bases[@]}"
  printf '\n'
}

_gen_files() {
  prog_name='dwmbar'
  prog_ver='1.0.0'

  # to strip get_packs() at compile time,
  # also instead using more hard-coded macros
  # let the shell enumerate them for us
  declare -a enumDistros=()
  for x in {0..6}
  do
    enumDistros[${x}]="-D${_bases[${x}]^^}=${x}"

    [[ "${1,,}" == "${_bases[${x}]}" ]] && {
      distro_num="${x}"
    }
  done

  # configure.ac
  configure_ac=("# This file is processed by autoconf to create a configure script
  AC_INIT(["${prog_name}"], ["${prog_ver}"])
  AC_CONFIG_AUX_DIR([temp_dir])
  AC_CONFIG_MACRO_DIR([m4])
  AM_INIT_AUTOMAKE([1.11 -Wall no-define foreign subdir-objects dist-xz no-dist-gzip std-options])

  AM_SILENT_RULES([yes])
  # Favour clang and fallback to gcc
  AC_PROG_CC([clang llvm-gcc gcc])
  AC_PROG_CC_C99
  AC_C_CONST
  AC_HEADER_STDC
  AM_PROG_CC_C_O

  # The linker flags tests in m4 dir
  TEST_X11
  TEST_ALSA
  TEST_MPD
  TEST_TYPEZ

  AC_CONFIG_FILES([
  Makefile
  src/Makefile
  ])

  AC_OUTPUT

  echo
  echo 'Now type \"make\" and \"make install\" afterwards'
  echo")


  # Makefile.am
  main_makefile=('
  SUBDIRS = \
      src
  ')


  # src/Makefile.am
  src_files=(
    'main.c'
    'functions.c'
    'functions.h'
    'main_constants.h'
    'functions_constants.h'
  )

  src_makefile=('AM_CPPFLAGS = \
      -D_POSIX_C_SOURCE=200112L \
      -DICONS_DIR=\"$(ICONZ)\" \
      -DWITH_COLOURS=$(WITH_COLOURS) \
      -DDISTRO='${distro_num}' \
      '${enumDistros[@]}'

  bin_PROGRAMS = \
    '${prog_name}'

  # clang will not append std=bar
  # on its own which gcc does
  '${prog_name}'_CFLAGS = \
    -O2 -std=c99 -Wextra -Wall -Wundef -W -Wshadow \
    -Wwrite-strings -Wcast-align -Wstrict-overflow=5 \
    -Wconversion -Wpointer-arith -Wstrict-prototypes \
    -Wformat=0 -Wmissing-prototypes -Wno-unused-result \
    -Wno-unused-function -pedantic -Wno-missing-field-initializers

  '${prog_name}'_LDADD = $(X_LIBS) $(ALSA_LIBS) $(MPD_LIBS)

  '${prog_name}'_SOURCES = '${src_files[@]}'
  ')


  cat <<EOF > configure.ac
${configure_ac[@]}
EOF

  cat <<EOF > Makefile.am
${main_makefile[@]}
EOF

  cat <<EOF > src/Makefile.am
${src_makefile[@]}
EOF


  # do not remove nor edit
  autoreconf --install --force
}


[[ -z "${1}" ]] && _printf_err "$@" || {
  [[ " ${_bases[@]} " =~ " ${1,,} " ]] && \
    _gen_files "$@" || _printf_err "$@"
}
